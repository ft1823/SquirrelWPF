<Window x:Class="SquirrelWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SquirrelWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel Width="350" Margin="0">
            <Button Content="Update version" x:Name="btnversion"  Width="100" Height="30" Click="btnversion_Click"></Button>
            <Label FontFamily="Segoe UI"  FontSize="20" Foreground="#ff707070"  Content="Version: 0.0.0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </DockPanel>
    </Grid>
</Window>
